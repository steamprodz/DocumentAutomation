<UserControl x:Class="WpfAppTest.DocumentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppTest"
             mc:Ignorable="d" Width="80" Height="80" MouseMove="UserControl_MouseMove" GiveFeedback="UserControl_GiveFeedback">
    <Grid x:Name="GridBackground" Margin="4" MouseMove="GridBackground_MouseMove" MouseLeave="GridBackground_MouseLeave" MouseDown="GridBackground_MouseDown">
        <Image Height="32" Margin="15,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="32" Source="/WpfAppTest;component/Icons/document.png" OpacityMask="{x:Null}"/>
        <TextBlock x:Name="TextBox_Filename" Margin="3,37,4,0" TextWrapping="Wrap" Text="TextBox Filename" VerticalAlignment="Top" Height="35" TextAlignment="Center" FontFamily="Segoe UI Semilight" FontSize="10"/>
    </Grid>
</UserControl>
